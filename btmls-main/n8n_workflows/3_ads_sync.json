        {
            "parameters": {
                "url": "=https://graph.facebook.com/v19.0/{{ $json.body.ad_set_id }}/ads",
                "authentication": "genericCredentialType",
                "genericAuthType": "httpHeaderAuth",
                "sendQuery": true,
                "queryParameters": {
                    "parameters": [
                        {
                            "name": "fields",
