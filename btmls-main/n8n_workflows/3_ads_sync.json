            "credentials": {
                "httpHeaderAuth": {
                    "id": "JHC7dBCtkd3bICFX",
                    "name": "BmtlsUser Token"
                }
            }
        },
        {
            "parameters": {
                "fieldToSplitOut": "data",
                "options": {}
            },
            "id": "split-ads-3",
            "name": "Split Ads",
            "type": "n8n-nodes-base.splitOut",
            "typeVersion": 1,
            "position": [
                440,
                0
