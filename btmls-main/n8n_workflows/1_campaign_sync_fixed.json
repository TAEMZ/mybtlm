        {
            "parameters": {
                "jsCode": "// Normalize input - works for both webhook and Execute Workflow\nconst input = $input.item.json;\nconst brand_id = input.brand_id || input.body?.brand_id;\n\nif (!brand_id) {\n  throw new Error('brand_id is required');\n}\n\nreturn [{\n  json: {\n    brand_id: brand_id\n  }\n}];"
            },
