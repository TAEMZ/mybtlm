        {
            "parameters": {
                "fieldToSplitOut": "data",
                "options": {}
            },
            "id": "split-campaigns-1",
            "name": "Split Campaigns",
            "type": "n8n-nodes-base.splitOut",
            "typeVersion": 1,
            "position": [
                660,
                100
            ]
        },
        {
            "parameters": {
                "options": {}
            },
            "id": "loop-campaigns-1",
            "name": "Loop Campaigns",
            "type": "n8n-nodes-base.splitInBatches",
            "typeVersion": 3,
            "position": [
                880,
                100
            ]
        },
        {
            "parameters": {
                "operation": "executeQuery",
                "query": "INSERT INTO facebook_campaigns (id, brand_id, name, status, date_launched, created_at)\nVALUES (\n  '{{ $json.id }}',\n  '{{ $('Normalize Input').item.json.brand_id }}',\n  '{{ $json.name.replace(/'/g, \"''\") }}',\n  '{{ $json.status }}',\n  '{{ $json.created_time }}',\n  NOW()\n)\nON CONFLICT (id) DO NOTHING",
                "options": {}
            },
            "id": "save-campaign-1",
            "name": "Save Campaign",
            "type": "n8n-nodes-base.postgres",
            "typeVersion": 2.4,
            "position": [
                1100,
                200
            ],
            "credentials": {
                "postgres": {
                    "id": "uDaI4cpRDpgAs2Eg",
                    "name": "NEW POSTGREE"
                }
            }
        },
        {
            "parameters": {
                "workflowId": "={{ $('Get AdSet Sync ID').item.json.workflowId }}",
                "fieldsToSend": {
                    "fields": [
                        {
                            "fieldName": "campaign_id",
                            "fieldValue": "={{ $json.id }}"
                        },
                        {
                            "fieldName": "brand_id",
                            "fieldValue": "={{ $('Normalize Input').item.json.brand_id }}"
                        }
                    ]
                },
                "options": {
                    "waitForSubWorkflow": false
                }
            },
            "id": "trigger-adset-sync-1",
