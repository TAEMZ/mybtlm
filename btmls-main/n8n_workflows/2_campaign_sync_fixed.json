                    }
                ]
            ]
        },
        "Wait Rate Limit": {
            "main": [
                [
                    {
                        "node": "Trigger AdSet Sync",
                        "type": "main",
                        "index": 0
                    }
                ]
            ]
        },
        "Trigger AdSet Sync": {
            "main": [
                [
                    {
                        "node": "Loop Campaigns",
                        "type": "main",
                        "index": 0
                    }
                ]
            ]
        }
    },
    "pinData": {}
}